<% provide(:title,'Porducts') %>
<% provide(:stock,'active') %>
<div class="main">
	<div class="action-part">
		<button class="btn btn-primary float-right mr-3" data-toggle="modal" data-target="#product_modal">Add product</button>
	</div>
	<div class="product-table-container">
		<table class="product-table table table-bordered">
			<thead>
				<th>Code</th>
				<th>Name</th>
				<th>Brand</th>
				<th>Properties</th>
				<th>Desciption</th>
				<th>Price</th>
				<th>Offer type</th>
				<th>Offer</th>
				<th>qunatity</th>
			</thead>
		</table>
	</div>
</div>
<div class="modal fade" id="product_modal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				Add a new product
                    <span aria-hidden="true" class="close" data-dismiss="modal">&times;</span>

			</div>
			<div class="modal-header">
				 <%= form_for(@product) do |product| %>
				 	<div class="row">
				 		<div class="col-md-6">
				 			<div class="form-group">
				 				<%= product.label(:name)  %>
				 				<%= product.text_field(:name,class:'form-control') %>
				 			</div>
				 		</div>
				 		<div class="col-md-6">
				 			<div class="form-group">
				 				<%= product.label(:brand,'Select brand')  %>
				 				<%= product.text_field(:brand,class:'form-control') %>
				 			</div>
				 		</div>
				 	</div>
				 	<div class="row">
				 		<div class="col-md-12">
				 			<div class="form-group">
				 				<%= label_tag(:properties,'Properties') %>
				 				<%= text_area(:properties,'',class:'form-control') %>
				 			</div>
				 		</div>
				 	</div>
				 	<div class="row mx-4 properties-table-container">
				 		<table class="table table-bordered" id="properties_table">
				 			<thead><th>Property</th><th>value</th></thead>
				 			<tbody>
				 				<td>color</td>
				 				<td></td>
				 			</tbody>
				 		</table>
				 	</div>
				 	<div class="row">
				 		<div class="col-md-4">
				 			<div class="form-group">
				 				 <%= product.label(:current_price) %>
				 				 <%= product.text_field(:current_price,class:'form-control') %>
				 			</div>
				 		</div>
				 		<div class="col-md-4">
				 			<div class="form-group">
				 				 <%= product.label(:offer_type,'Offer type') %>
				 				 <%= product.text_field(:offer_type,class:'form-control') %>
				 			</div>
				 		</div>
				 		<div class="col-md-4">
				 			<div class="form-group">
				 				 <%= product.label(:offer) %>
				 				 <%= product.text_field(:offer,class:'form-control') %>
				 			</div>
				 			
				 		</div>

				 	</div>
				 <% end %>
			</div>
			<div class="modal-footer">
               	<button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-danger" >cancel</button>
			</div>
		</div>
	</div>
</div>