<% provide(:title,'Stock') %>
<% provide(:stock,'active') %>
<div class="main">
	<div class="action-part pr-4">
		<%= link_to '<i class="fa fa-plus"></i> Add stock'.html_safe, stock_new_path,class:'float-right btn btn-primary btn-pill ' %>
	</div>
	<div class="content">
		<div class="stock-container">
			<div class="row">
				<div class="col-md-6 col-xs-6 col-sm-6">
					<div class="card">
                		<div class="card-body">
                    		<h4 class="card-title">Stock Name</h4>
                    		<p class="card-text">Short description</p>
                    		<a href="#" class="btn btn-primary">products</a>
                		</div>
            		</div>					
				</div>
			</div>	

		</div>
	</div>
</div>

<div class="modal fade" id="new_stock_modal" tabindex="-1" role="dialog" aria-labelledby="Add new stock" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new Stock</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            	<div class="modal-footer">
               		<button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
                	<button type="button" class="btn btn-danger" data-dismiss="modal">cancel</button>
            	</div>
        	</div>
   		</div>
	</div>
</div>